@using GerenciamentoMercadoria.Models.ViewModels;
@model List<EntradaSaida>
@{
    ViewData["Title"] = "EntradaSaida";
}

<div class="text-left">
    <h3>Lista de Saida</h3>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Tipo</th>
                <th scope="col">Data / Hora</th>
                <th scope="col">Produto</th>
                <th scope="col">Quantidade</th>
                <th scope="col">Estado(UF)</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (EntradaSaida EntradaSaida in Model)
                {
                    <tr>
                        <th scope="row">@EntradaSaida.Id</th>
                        <td>@EntradaSaida.Tipo</td>
                        <td>@EntradaSaida.DataHora</td>
                        <td>@EntradaSaida.mercadoria.Nome</td>
                        <td>@EntradaSaida.Quantidade</td>
                        <td>@EntradaSaida.Estado</td>
                    </tr>
                }
            }
        </tbody>
    </table>

</div>
