@using GerenciamentoMercadoria.Models.ViewModels;
@using X.PagedList.Mvc.Core
@model X.PagedList.PagedList<EntradaSaida>
@{
    ViewData["Title"] = "Bem vindo";
}

<div class="text-center">
    <canvas id="myChart" style="width:100%; height:400px;"></canvas>
    <div class="form-row mt-4">
        <div class="col">
        <a role="button" class="btn btn-success" asp-controller="Entrada" asp-action="Index">Entrada de Mercadoria</a>
        <a role="button" class="btn btn-danger" asp-controller="Saida" asp-action="Index">Saida de Mercadoria</a>
    </div>

        <h4>Lista de Entrada e Saída</h4>
        <div class="d-flex justify-content-end">
            <div class="p-2">
                <a role="button" asp-controller="Home" asp-action="" class="btn btn-primary">Relatório</a>
            </div>
            <div class="p-2">
                <a role="button" asp-controller="Home" asp-action="Index" class="btn btn-primary">All</a>
            </div>
            <div class="p-2">
                <div id="entradaSaida"></div>
            </div>
        </div>

        <div id="listaHome">@Html.Partial("_Lista", Model)</div>

        </div>

    </div>
</div>
