@model Mercadoria

<div class="text-left" style="width:400px;">

    @if (TempData["Sucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="close-alert text-success" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <strong>Sucesso! </strong>@TempData["Sucesso"]
        </div>
    }
    @if (TempData["Falha"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="close-alert text-danger" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <strong>Error! </strong>@TempData["Falha"]
        </div>
    }

    <h4>Cadastrar Mercadorias</h4>

    <form asp-controller="Mercadoria" asp-action="Inserir" method="post">
        <div class="form-group mb-2">
            <label>Produto</label>
            <input type="text" asp-for="Nome" name="Nome" class="form-control">
            <small class="text-danger">@Html.ValidationMessageFor(p => p.Nome)</small>
        </div>
        <div class="form-group mb-2">
            <label>Categoria</label>
            <select asp-for="CategoriaId" name="CategoriaId" asp-items="ViewBag.CategoriaId" class="form-select">
                <option selected>Selecionar</option>
             </select>
            <small class="text-danger">@Html.ValidationMessageFor(p => p.CategoriaId)</small>
        </div>
        <div class="form-group mb-2">
            <label>Fabricante</label>
            <select asp-for="FabricanteId" name="FabricanteId" asp-items="ViewBag.FabricanteId" class="form-select">
                <option selected>Selecionar</option>
             </select>
            <small class="text-danger">@Html.ValidationMessageFor(p => p.FabricanteId)</small>
        </div>
        <div class="form-group mb-3">
            <label>Descrição</label>
            <textarea asp-for="Descricao" name="Descricao" class="form-control" rows="3"></textarea>
            <small class="text-danger">@Html.ValidationMessageFor(p => p.Descricao)</small>
        </div>
        <a role="button" asp-controller="Mercadoria" asp-action="Index" class="btn btn-primary mt-2">Voltar</a>
        <button type="submit" class="btn btn-success mt-2">Inserir</button>
    </form>
</div>

